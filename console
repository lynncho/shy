#!/usr/bin/env php
<?php
/**
 * Shy Framework Console Entry
 *
 * @author    lynn<admin@lynncho.cn>
 * @link      http://lynncho.cn/
 */

use shy\console\exception\handler;

/**
 * Composer Autoload
 */
require __DIR__ . '/vendor/autoload.php';
/**
 * Helpers
 */
require __DIR__ . '/shy/core/function/helpers.php';
/**
 * Config
 */
config_set('IS_CLI', true);
config_set('SHY_START_TIME', microtime(true));
/**
 * Run CLI mode
 */
(container())->setExceptionHandler(new handler());
shy('console', 'shy\console')->run();
